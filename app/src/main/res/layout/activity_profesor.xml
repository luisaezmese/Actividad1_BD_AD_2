<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profesor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.luisangel.actividad1_bd_ad.Profesor"
    android:orientation="vertical">

    <TextView
        android:text="NOMBRE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textNombre" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editNombre" />

    <TextView
        android:text="EDAD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textEdad" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editEdad" />

    <TextView
        android:text="CICLO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textClico" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editCiclo" />

    <TextView
        android:text="CURSO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textCurso" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editCurso" />
    <TextView
        android:text="DESPACHO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textDespacho" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editDespacho" />

    <Button
        android:text="Guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGuardar" />
    <TextView
        android:text="Indica el Id del profedor a borrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewborrar" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextBorrarP" />

    <Button
        android:text="Borrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBorrarP" />


</LinearLayout>
